                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="IscvsHypotension" class="control-label"></label>
                            <div class="form-check">
                                <input type="radio" asp-for="IscvsHypotension" class="form-check-input" value="true" />
                                <label class="form-check-label">Yes</label>
                            </div>
                            <div class="form-check">
                                <input type="radio" asp-for="IscvsHypotension" class="form-check-input" value="false" />
                                <label class="form-check-label">No</label>
                            </div>
                            <span asp-validation-for="IscvsHypotension" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- More Conditions -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="IscvsAnticoagulant" class="control-label"></label>
                            <div class="form-check">
                                <input type="radio" asp-for="IscvsAnticoagulant" class="form-check-input" value="true" />
