                            <div class="form-check">
                                <input type="radio" asp-for="IscvsAnticoagulant" class="form-check-input" value="false" />
                                <label class="form-check-label">No</label>
                            </div>
                            <span asp-validation-for="IscvsAnticoagulant" class="text-danger"></span>
                        </div>
                    </div>

                
                </div>

                <!-- Submit Button & Modal -->
