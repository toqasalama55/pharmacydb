@model Models.Patient

@{
    ViewData["Title"] = "PatientHistory";
}

<h1 class="text-center mb-4">Patient Questionnaire</h1>

<!-- Bootstrap & jQuery -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

<style>
    .btn-maroon {
        background-color: maroon;
        border-color: maroon;
        color: white;
        font-size: 1.25rem; /* Increase font size */
        padding: 10px 30px; /* Add more padding for size */
    }

        .btn-maroon:hover {
            background-color: darkred;
            border-color: darkred;
        }

    .btn-secondary {
        background-color: grey;
        border-color: grey;
        color: white;
        font-size: 1.25rem; /* Increase font size */
        padding: 10px 30px; /* Add more padding for size */
    }

        .btn-secondary:hover {
            background-color: dimgrey;
            border-color: dimgrey;
        }

</style>

<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-area="Patient" asp-controller="Questioner" asp-action="PatientHistory" method="Post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Patient Name -->
                <div class="form-group">
                    <label asp-for="PatientName" class="control-label">Patient Name</label>
                    <input asp-for="PatientName" class="form-control" placeholder="Enter Your Name" />
                    <span asp-validation-for="PatientName" class="text-danger"></span>
                </div>

                <!-- Height -->
                <div class="form-group">
                    <label asp-for="Height" class="control-label">Height (cm)</label>
                    <input type="number" asp-for="Height" class="form-control" placeholder="Enter Your Height" />
                    <span asp-validation-for="Height" class="text-danger"></span>
                </div>

                <!-- Weight -->
                <div class="form-group">
                    <label asp-for="Weight" class="control-label">Weight (kg)</label>
                    <input type="number" asp-for="Weight" class="form-control" placeholder="Enter Your Weight" />
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>

                <!-- Yes/No Questions -->
                <h4 class="my-4">Medical Conditions:</h4>
                <div class="row">
                    <div class="col-md-6">
                        <!-- Alzheimer's -->
                        <div class="form-group">
                            <label asp-for="IsAlzehimer" class="control-label"></label>
                            <div class="form-check">
                                <input type="radio" asp-for="IsAlzehimer" class="form-check-input" value="true" />
                                <label class="form-check-label">Yes</label>
                            </div>
                            <div class="form-check">
                                <input type="radio" asp-for="IsAlzehimer" class="form-check-input" value="false" />
                                <label class="form-check-label">No</label>
                            </div>
                            <span asp-validation-for="IsAlzehimer" class="text-danger"></span>
                        </div>

                        <!-- Antiallergic -->
                        <div class="form-group">
                            <label asp-for="IsAntiallergic" class="control-label"></label>
                            <div class="form-check">
                                <input type="radio" asp-for="IsAntiallergic" class="form-check-input" value="true" />
                                <label class="form-check-label">Yes</label>
                            </div>
                            <div class="form-check">
                                <input type="radio" asp-for="IsAntiallergic" class="form-check-input" value="false" />
                                <label class="form-check-label">No</label>
                            </div>
                            <span asp-validation-for="IsAntiallergic" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <!-- Antidepressants -->
                        <div class="form-group">
                            <label asp-for="IsAntidepressants" class="control-label"></label>
                            <div class="form-check">
                                <input type="radio" asp-for="IsAntidepressants" class="form-check-input" value="true" />
                                <label class="form-check-label">Yes</label>
                            </div>
                            <div class="form-check">
                                <input type="radio" asp-for="IsAntidepressants" class="form-check-input" value="false" />
                                <label class="form-check-label">No</label>
                            </div>
                            <span asp-validation-for="IsAntidepressants" class="text-danger"></span>
                        </div>

                        <!-- Appetizers -->
                        <div class="form-group">
                            <label asp-for="IsAppetizers" class="control-label"></label>
                            <div class="form-check">
                                <input type="radio" asp-for="IsAppetizers" class="form-check-input" value="true" />
                                <label class="form-check-label">Yes</label>
                            </div>
                            <div class="form-check">
                                <input type="radio" asp-for="IsAppetizers" class="form-check-input" value="false" />
                                <label class="form-check-label">No</label>
                            </div>
                            <span asp-validation-for="IsAppetizers" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- More Conditions -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="IsCough" class="control-label"></label>
                            <div class="form-check">
