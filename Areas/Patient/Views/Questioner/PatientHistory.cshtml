                                <label class="form-check-label">Yes</label>
                            </div>
                            <div class="form-check">
                                <input type="radio" asp-for="IsMassage" class="form-check-input" value="false" />
                                <label class="form-check-label">No</label>
                            </div>
                            <span asp-validation-for="IsMassage" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
