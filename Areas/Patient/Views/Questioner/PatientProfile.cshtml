@* @model IEnumerable<Patient>
 *@
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<style>
    .Patient-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        margin: 20px 0;
    }

    .Patient-card {
        background-color: #f8f9fa;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 20px;
        width: 300px;
        margin: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .Patient-info {
        margin-bottom: 10px;
    }

    .Patient-name {
        font-size: 1.5rem;
        font-weight: bold;
        color: maroon;
    }

    .Patient-details p {
        margin: 5px 0;
    }
</style>

<div class="Patient-container">
    @foreach (var Patient in Model)
    {
        <div class="Patient-card">
            <div class="Patient-info">
                <p class="Patient-name">@Patient.PatientName</p>
                <p><strong>Height:</strong> @Patient.Height</p>
                <p><strong>Weight:</strong> @Patient.Weight</p>

                <div class="Patient-details">
                    @if (Patient.IsInfluenza)
                    {
                        <p><strong>Influenza:</strong> Yes</p>
                    }

                    @if (Patient.IsDiabetes)
                    {
                        <p><strong>Diabetes:</strong> Yes</p>
                    }

                    @if (Patient.IsAlzehimer)
                    {
                        <p><strong>Alzheimer:</strong> Yes</p>
                    }

                    @if (Patient.IsAntiallergic)
                    {
                        <p><strong>Antiallergic:</strong> Yes</p>
                    }

                    @if (Patient.IsAntidepressants)
                    {
                        <p><strong>Antidepressants:</strong> Yes</p>
                    }

                    @if (Patient.IsAppetizers)
                    {
                        <p><strong>Appetizers:</strong> Yes</p>
                    }
                </div>
            </div>
        </div>
    }
</div>
